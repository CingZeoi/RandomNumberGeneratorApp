				<!-- 组内的每一个item都是一个单选项 -->
				<item
                    android:id="@+id/context_menu_sort_shuffle"
                    android:title="@string/menu_sort_shuffle"
                    android:checked="true" />

				<item
                    android:id="@+id/context_menu_sort_asc"
                    android:title="@string/menu_sort_asc" />

				<item
                    android:id="@+id/context_menu_sort_desc"
                    android:title="@string/menu_sort_desc" />
