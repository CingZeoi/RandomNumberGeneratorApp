        android:id="@+id/context_menu_copy_all"
        android:title="@string/menu_copy_all" />
	<item
        android:id="@+id/context_menu_clear"
        android:title="@string/menu_clear" />

	<!-- 带有子菜单的排序菜单项 -->
	<item
        android:id="@+id/context_menu_sort"
        android:title="@string/menu_sort_by">

		<menu>
			<!-- 定义一个group，并设置其单选行为 -->
			<group
                android:id="@+id/context_menu_sort_group"
